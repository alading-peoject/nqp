@import "../common/reset.styl"
@import "../common/component.styl"

.panel
	display flex
	flex-direction column
	.panel-heading
		height $rem(60px)
		background-color #548333
		width $rem(240px)
		color #fff
		text-align center
		font-size $rem(16px)
		display flex
		align-items center
		justify-content center
	.panel-body
		flex 2
.panel-body
	display flex
	flex-direction column
	font-size $rem(14px)
	.row
		flex 1
.row
	display flex
	margin-top $rem(10px)
	padding $rem(0px 10px)
	.col-sm-4
		flex 1
	.col-sm-8
		flex 2
.row
	.table 
		width 100%
		th,td
			height $rem(60px)
			background-color #86bd48
			padding $rem(5px 10px)
			color #000
			border 1px solid #fff
		th
			margin-bottom $rem(10px)
	.selected 
		background-color #01b1f1 
.date
	border 1px solid #86BD48
	height $rem(50px)
	margin-right $rem(10px)
	display flex
	align-items center
	justify-content left
	padding-left $rem(10px)
.form-group
	display flex
	margin-right $rem(10px)
	border $rem(1px) solid #86BD48
	height $rem(60px)
	label
		width 50%
		border-right $rem(1px) solid #86BD48
		height 100%
		text-indent $rem(10px)
		display flex
		align-items center
		justify-content center
	input 
		width 50%
		height 100%
		display flex
		align-items center
		justify-content center
		text-align center
		border none
.nav
	width 100%
	display flex
	flex-wrap wrap
	li
		padding $rem(20px 5px)
		width $rem(65px)
		background-color #e7e7e7
		border-right $rem(1px) solid #fff
		border-bottom $rem(1px) solid #fff
		text-align center
	.selected
		background-color #01b1f1 
			
		
		