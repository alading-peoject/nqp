@import "../common/util"

gold()
	.header
		h1
			font-size $rem(30px)
		.back
			font-size $rem(40px)
	.table thead tr,.table tbody tr
		display flex
	.table
		width 100%
		tr
			border-bottom $rem(1px) solid #b4b4b4
			font-size $rem(22px)
			color #000
		thead th
			background-color #f5f4f9
		tbody td,thead th
			flex 1
			height $rem(70px)
			display flex
			justify-content center
			align-items center
		tbody td:nth-child(1),tbody td:nth-child(3)
			color #9d9d9d
		tbody td.positive
			color #f9c00e
		tbody td.negative
			color #f33718
	.btn
		padding $rem(5px 20px)
		color #fff
		font-weight bold
		
	.btn-success
		background-color #7cc373
	.btn-confirm
		background-color #f33718