@import "../common/util"

collect()
	.header
		h1
			font-size $rem(30px)
		.back
			font-size $rem(40px)
	.item
		display flex
		justify-content center
		align-items center
		padding $rem(25px 34px)
		background-color #f5f5f5
		margin-top $rem(10px)
		.img
			flex 1
			img
				width $rem(160px)
				height $rem(160px)
		.main
			flex 2
			display flex
			font-size $rem(22px)
			color #969696
			margin-left $rem(34px)
		.left
			flex 1
			display flex
			justify-content flex-start
			flex-direction column
			h2
				font-size $rem(24px)
				color #000
		.right
			flex 1
			display flex
			align-items flex-end
			flex-direction column
			h2
				font-size $rem(24px)
				color #000
			.origin-price
				text-decoration line-through
				margin-bottom $rem(20px)
	.btn
		color #fff
		font-weight bold
		width $rem(108px)
		height $rem(34px)
		line-height @height
		text-align center
		font-weight normal
	
	
	.btn-success
		background-color #7cc373
	.btn-confirm
		background-color #f33718